
<%# Display validation errors in form %>
<% if @category.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@category.errors.count, "error") %>
      prohibited this category from being saved:
    </h2>
 
    <ul>
    <% @category.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="container d-flex flex-column mt-3">
    <div class="row align-items-center justify-content-center no-gutters min-vh-100">
        <div class="col-lg-5 col-md-13 py-8 py-xl-0 mb-4">
            <div class="card shadow">
                <div class="card-body p-6 mb-4">
                  <div class="mb-4">
                    <h1 class="mb-1 font-weight-bold">Edit Category</h1>
                  </div>

                  <%= form_with(model: @category, class: "form") do |f| %>
                        <div class="form-group">
                            <%= f.label :category_name, class: "form-label" %>
                            <%= f.text_field :name, class:"form-control-1" %><br>
                        </div>
                    
                        <%= f.submit %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>