<div class="bg-primary">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-xl-12 col-lg-12 col-md-12 col-12">
          <div class="py-4 py-lg-6">
            <h1 class="mb-0 text-white display-4">My Wishlists</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
<div class="py-6 mb-4">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="row justify-content-between align-items-center">
          <div class="col-xl-8 col-md-6">
            <h4 class="mb-3 mb-md-0">Total <%= Wishlist.all.count %> Wishlists </h4>
          </div>
          <div class="col-xl-2 col-md-3">
            <%= link_to("Create a new wishlist", new_user_wishlist_path(@user), class: "btn-wish") %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
    <div class="row">
        <!-- Card -->
        <% @user_wishlists.each do |w| %>
          <div class="col-xl-4 col-lg-6 col-md-6">
            <div class="card mb-4 card-hover">
              <div class="d-flex justify-content-between align-items-center p-4">
                <div class="d-flex">
                  <div class="ml-3">
                    <h4 class="mb-1">
                      <%= link_to w.name, user_wishlist_path(@user, id: w.id) %>
                    </h4>
                    <p class="mb-0 font-size-xs">
                      <span class="mr-2">
                        <span class="text-dark font-weight-medium"><%= w.groupbuys.count %></span>
                        Groupbuys
                      </span>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
    </div>
</div>