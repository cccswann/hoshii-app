<div class="container d-flex flex-column">
    <div class="row align-items-center justify-content-center no-gutters min-vh-100">
        <div class="col-lg-5 col-md-13 py-8 py-xl-0">
            <div class="card shadow">
                <div class="card-body p-6 mb-4">
                  <div class="mb-4">
                    <h1 class="mb-1 font-weight-bold">Edit Wishlist</h1>
                  </div>
                  <%= form_with(model: [@user, @wishlist], class: "form") do |f| %>
                  
                    <div class="form-group">
                      <%= f.label :name, class: "form-label" %><br />
                      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control-1" %>
                    </div>
                  
                    <div class="form-group">
                      <%= f.label :note, class: "form-label" %>
                      <%= f.text_area :note, autocomplete: "note", class: "form-control-1", size: "70x5" %>
                    </div>
                  
                    <%= f.submit "Update Wishlist", class: "btn btn-primary btn-block" %>
                  
                  <% end %>

                </div>
            </div>
        </div>
    </div>
</div>