<body class="text-center">
  <main class="form-signin">
    <img class="mb-4" src="Logo.png" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|, html: {class: 'form-signin'})%>
      <img class="mb-4" src="Logo.png" alt="" width="72" height="57">
      <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
      <div class="form-floating">
        <%= f.label :email, class: 'form-control' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field form-floating">
        <%= f.label :password, class: 'form-control'%><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="checkbox mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions btn w-100 btn-lg btn-primary">
        <%= f.submit "Log in" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </main>
</body>
